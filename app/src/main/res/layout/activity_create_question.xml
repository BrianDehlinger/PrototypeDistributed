<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplication.CreateQuestionActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_choice"
        android:text="@string/add_another_choice"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_question"
        android:text="@string/submit"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/prompt"
        android:paddingTop="30dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/enter_question_prompt"/>

</LinearLayout>