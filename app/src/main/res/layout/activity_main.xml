<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplication.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/generate_connection_qr_button"
        android:text="@string/generate_connection_qr_code"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/iv"/>

    <Button
        android:id="@+id/create_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_a_question"/>

    <Button
        android:id="@+id/answer_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answer_the_active_question"/>


    <Button
        android:id="@+id/browse_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/browse_questions"/>

    <TextView
        android:id="@+id/userMetadata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/activateDummyQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate Dummy Question"
        />

    <TextView
        android:id="@+id/currentActiveQuestionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>