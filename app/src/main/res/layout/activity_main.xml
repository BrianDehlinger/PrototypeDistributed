<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplication.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/generate_connection_qr_button"
        android:text="@string/generate_connection_qr_code"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/generate_response"
        android:text="@string/generate_a_response"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/iv"/>

    <EditText
        android:id="@+id/ip_enter"
        android:paddingTop="30dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Write the IP"/>

    <Button
        android:id="@+id/set_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set IP"/>

</LinearLayout>